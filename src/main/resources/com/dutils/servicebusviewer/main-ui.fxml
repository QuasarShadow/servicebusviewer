<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="300" minWidth="400" prefHeight="600" prefWidth="1000" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dutils.servicebusviewer.MainUIController">
    <fx:define>
        <ToggleGroup fx:id="styleGroup" />
    </fx:define>

    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#handleConnection" text="Connections" />
            <MenuItem onAction="#handleSettings" text="Settings" />
            <SeparatorMenuItem />
            <MenuItem onAction="#handleExit" text="Exit" />
        </Menu>
        <Menu text="Edit">
            <MenuItem onAction="#clearLog" text="Clear Log" />
        </Menu>
        <Menu text="Style">
            <RadioMenuItem onAction="#handleStyles" text="PrimerLight" userData="PrimerLight">
                <toggleGroup>
                    <ToggleGroup fx:id="styleGroup" />
                </toggleGroup>
            </RadioMenuItem>
            <RadioMenuItem onAction="#handleStyles" text="PrimerDark" toggleGroup="$styleGroup" userData="PrimerDark" />
            <RadioMenuItem onAction="#handleStyles" text="CupertinoLight" toggleGroup="$styleGroup" userData="CupertinoLight" />
            <RadioMenuItem onAction="#handleStyles" text="CupertinoDark" toggleGroup="$styleGroup" userData="CupertinoDark" />
            <RadioMenuItem onAction="#handleStyles" text="NordLight" toggleGroup="$styleGroup" userData="NordLight" />
            <RadioMenuItem onAction="#handleStyles" text="NordDark" toggleGroup="$styleGroup" userData="NordDark" />
            <RadioMenuItem onAction="#handleStyles" text="Dracula" toggleGroup="$styleGroup" userData="DraculaDark" />
            <RadioMenuItem onAction="#handleStyles" text="Default-Modena" toggleGroup="$styleGroup" userData="Default" />
        </Menu>
        <Menu text="Help">
            <MenuItem onAction="#handleAbout" text="About" />
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <AnchorPane>
            <SplitPane fx:id="topSplitPane" dividerPositions="0.3" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <AnchorPane>
                    <TreeView fx:id="treeview" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem fx:id="mnuRefresh" onAction="#handleRefresh" text="Refresh" />
                                    <SeparatorMenuItem />
                                    <MenuItem fx:id="mnuStatus" onAction="#handleStatus" text="Status" />
                                    <MenuItem fx:id="mnuSendMsg" onAction="#handleSendMsg" text="Send Message" />
                                    <SeparatorMenuItem />
                                    <MenuItem fx:id="mnuSortByName" onAction="#handleSortByName" text="Sort By Name" />
                                    <MenuItem fx:id="mnuSortByMessage" onAction="#handleSortByMessages" text="Sort By Message" />
                                    <MenuItem fx:id="mnuSendToDlq" onAction="#handleSendToDlq" text="Send All to DLQ" />
                                    <MenuItem fx:id="mnuPurge" onAction="#handlePurge" text="Purge Messages" />
                                    <MenuItem fx:id="mnuDlq" onAction="#handlePurgeDlq" text="Purge DLQ" />
                                </items>
                            </ContextMenu>
                        </contextMenu>
                    </TreeView>
                </AnchorPane>
                <AnchorPane>
                    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <center>
                            <TabPane fx:id="messageViewTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                                <Tab text="Active Messages" userData="MESSAGES">
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                        <TableView fx:id="msgTableview" layoutX="112.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                    </AnchorPane>
                                </Tab>
                                <Tab text="DLQ Messages" userData="DLQMESSAGES">
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                        <TableView fx:id="msgDlqTableview" layoutX="112.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                    </AnchorPane>
                                </Tab>
                            </TabPane>
                        </center>
                        <bottom>
                            <FlowPane alignment="CENTER_RIGHT" hgap="30.0" prefHeight="35.0" rowValignment="BOTTOM" vgap="5.0" BorderPane.alignment="CENTER_RIGHT">
                                <BorderPane.margin>
                                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                                </BorderPane.margin>
                                <Button fx:id="btnpeek" onAction="#handlePeek" text="Peek" />
                                <Button fx:id="btnSaveMsg" onAction="#handleSave" text="Save Selected" />
                                <Button fx:id="btnRestoreSel" onAction="#handleRestoreFromDlq" text="Restore Selected" />
                                <Button fx:id="btnRestoreAll" onAction="#handleRestoreAll" text="RestoreAll" />
                                <Button onAction="#handleRefresh" text="Refresh" />
                            </FlowPane>
                        </bottom>
                    </BorderPane>
                </AnchorPane>
            </SplitPane>
        </AnchorPane>
        <!-- Bottom area -->
        <AnchorPane>
            <TabPane layoutX="47.0" layoutY="23.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Tab text="Properties">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <TableView fx:id="tableview" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy></TableView>
                    </AnchorPane>
                </Tab>
                <Tab text="Log">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <TextArea fx:id="logNode" style="-fx-font-family: 'Monospaced'; -fx-font-size: 14;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

                    </AnchorPane>
                </Tab>

            </TabPane>
        </AnchorPane>
    </SplitPane>
    <BorderPane>
        <left>
            <Label fx:id="statusText" text="Status Text" BorderPane.alignment="CENTER" />
        </left>
        <right>
            <HBox fx:id="progressBox" alignment="CENTER" managed="false" spacing="10" visible="false">
                <ProgressIndicator fx:id="progressIndicator" prefHeight="20" prefWidth="20" />
                <Label fx:id="progressLabel" text="Processing..." />
                <BorderPane.margin>
                    <Insets right="10" />
                </BorderPane.margin>
            </HBox>
        </right>
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <opaqueInsets>
            <Insets left="5.0" top="5.0" />
        </opaqueInsets>

    </BorderPane>
</VBox>