<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.flowless.*?>
<?import org.fxmisc.richtext.*?>

<DialogPane fx:id="dialogPane" expanded="true" prefHeight="800" prefWidth="1000" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dutils.servicebusviewer.MessageDialogController">
    <header>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="NEVER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
            <Label fx:id="statusText" alignment="TOP_LEFT" text="Message" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="contentType" onAction="#handleContentTypeChange" prefWidth="150.0" value="Raw" visibleRowCount="5" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Raw" />
                        <String fx:value="JSON" />
                        <String fx:value="XML" />
                    </FXCollections>
                </items>
            </ComboBox>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </GridPane>
    </header>
    <content>
        <StackPane fx:id="stackPane" maxHeight="Infinity" maxWidth="Infinity" prefHeight="700.0">
            <SplitPane fx:id="splitPane" dividerPositions="0.7" maxHeight="Infinity" maxWidth="Infinity">
                <VirtualizedScrollPane SplitPane.resizableWithParent="true">
                    <content>
                        <CodeArea fx:id="messageEditor" style="-fx-font-family: 'Monospaced';" wrapText="true" />
                    </content>
                </VirtualizedScrollPane>
                <SplitPane fx:id="innerSplitPane" dividerPositions="0.7" orientation="VERTICAL" SplitPane.resizableWithParent="true">
                    <TreeTableView fx:id="propsTreeTableView" editable="true">
                        <columns>
                            <TreeTableColumn fx:id="propColumn" prefWidth="150.0" text="Property" />
                            <TreeTableColumn fx:id="valueColumn" prefWidth="150.0" text="Value" />
                        </columns>
                    </TreeTableView>
                    <TableView fx:id="customPropsTableView">
                        <columns>
                            <TableColumn fx:id="customPropColumn" prefWidth="150.0" text="Custom Property" />
                            <TableColumn fx:id="customValueColumn" prefWidth="150.0" text="Value" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </SplitPane>
            </SplitPane>
        </StackPane>
    </content>
    <ButtonType fx:id="previousButtonType"  buttonData="OTHER" text="Previous" />
    <ButtonType fx:id="nextButtonType"  buttonData="OTHER" text="Next" />
    <ButtonType fx:id="loadMessageButtonType"  buttonData="OTHER" text="Open File" />
    <ButtonType fx:id="formatButtonType" buttonData="OTHER" text="Format" />
    <ButtonType fx:id="saveButtonType"  buttonData="OTHER"  text="Backup" />
    <ButtonType fx:id="submitButtonType" buttonData="OTHER" text="Submit" />

    <ButtonType buttonData="CANCEL_CLOSE" text="Cancel" />

</DialogPane>
